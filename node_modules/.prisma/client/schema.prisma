generator client {
  provider = "prisma-client-js"
  // previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model key {
  id         Int      @id @default(autoincrement())
  puzzleId   Int
  connection String
  answers    String[]
}

model user {
  id          Int      @id @default(autoincrement())
  username    String   @unique
  hash        String
  salt        String
  puzzlesDone puzzle[]
}

model puzzle {
  puzzleId Int  @id @unique
  // key      key  @relation(fields: [puzzleId], references: [id])
  userId   Int
  solver   user @relation(fields: [userId], references: [id])
  mistakes Int
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}
