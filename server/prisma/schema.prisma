generator client {
  provider = "prisma-client-js"
  // previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model key {
  id          Int           @id @default(autoincrement())
  puzzleId    Int
  connection  String
  answers       String[]
}

model user {
  id          Int           @id @default(autoincrement())
  hash        String
  salt        String
  username    String        @unique
}

model Session {
  id          String   @id
  sid         String   @unique
  data        String
  expiresAt   DateTime
}